<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pfc="clr-namespace:Maui.SystemColors;assembly=Maui.SystemColors"
             xmlns:local="clr-namespace:SystemColorsSample"
             x:Class="SystemColorsSample.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml"></ResourceDictionary>
                <pfc:PlatformColorsResourceDictionary></pfc:PlatformColorsResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

